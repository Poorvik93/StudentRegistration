@model StudentRegistarationPortal.Models.Course
@{
    ViewBag.Title = "EditCourse";
}

<div class="container bg-white p-3 mt-3 ">
    <span class="fw-bold">Edit Course</span>
    @Html.ValidationSummary(true, string.Empty, new { @class = "field-validation-error text-danger" })

    @using (Html.BeginForm("UpdateCourse", "Admin", new { id = ViewBag.CourseDetails.CourseId }, FormMethod.Post, new { @class = "row g-3 mt-2" }))
    {
        <div class="col-md-6">
            @Html.LabelFor(model => model.Name, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control shadow-none", @Value = ViewBag.CourseDetails.Name })
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(model => model.NoOfDays, new { @class = "form-label" })
            @Html.DropDownListFor(model => model.NoOfDays, new SelectList(new int[] { 1, 2, 3, 4, 5 }, ViewBag.CourseDetails.NoOfDays), new { @class = "form-control shadow-none" })
            @Html.ValidationMessageFor(model => model.NoOfDays)
        </div>
        <div class="col-12">
            @Html.LabelFor(model => model.Description, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Description, new { @class = "form-control shadow-none", @Value = ViewBag.CourseDetails.Description })
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="d-flex align-items-center col-12 row mt-2">
            <div class="mb-3 col-5">
                @Html.LabelFor(model => model.Date, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Date, new { @class = "form-control w-100 shadow-none", type = "date", @Value = ViewBag.CourseDetails.Date?.ToString("yyyy-MM-dd") })
                @Html.ValidationMessageFor(model => model.Date)
            </div>
            @*<div class="mb-3 col-5">
            @Html.LabelFor(model => model.Time, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Time, new { @class = "form-control w-100 shadow-none", type = "time", @Value = ViewBag.CourseDetails.Time?.ToString("HH:mm:tt") })
            @Html.ValidationMessageFor(model => model.Time)
        </div>*@
            <div class="mb-3 col-5">
                @Html.LabelFor(model => model.Time, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Time, "{0:hh:mm tt}", new { @class = "form-control w-100 shadow-none", type = "time", @Value = ViewBag.CourseDetails.Time?.ToString("HH:mm") })
                @Html.ValidationMessageFor(model => model.Time)
            </div>

        </div>

        <div class="col-12 text-end">
            @Html.ActionLink("Cancel", "Courses", "Admin", null, new { @class = "btn" })
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    }
</div>

@model StudentRegistarationPortal.Models.CourseDTO

@{
    ViewBag.Title = "CreateCourse";

}

<div class="container bg-white p-3 mt-3">
    <h5 class="fw-bold">Create Course</h5>

    @Html.ValidationSummary(false, string.Empty, new { @class = "field-validation-error text-danger" })

    <form action="@Url.Action("SaveCourse", "Admin")" method="post" class="row g-3 mt-2">
        <div class="col-md-6">
            <label for="Name" class="form-label">Name</label>
            <input type="text" id="Name" name="Name" class="form-control shadow-none" />
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="col-md-6">
            <label for="NoOfDays" class="form-label">Number of Days</label>
            <select id="NoOfDays" name="NoOfDays" class="form-control shadow-none">
                <option value="">-- Select --</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            @Html.ValidationMessageFor(model => model.NoOfDays)
        </div>
        <div class="col-12">
            <label for="Description" class="form-label">Description</label>
            <input type="text" id="Description" name="Description" class="form-control shadow-none" />
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="col-12">
            <button type="button" class="btn btn-primary" id="add-date-time-controls">Add</button>
        </div>

        <div id="date-time-container">
            <div class="row g-3 mt-2" id="dt-1">
                <div class="col-md-6">
                    <label for="Date" class="form-label">Date</label>
                    <input type="date" id="Date" name="Date" class="form-control shadow-none" />
                    @Html.ValidationMessageFor(model => model.Date)
                </div>
                <div class="col-md-6">
                    <label for="Time" class="form-label">Time</label>
                    <input type="time" id="Time" name="Time" class="form-control shadow-none" />
                    @Html.ValidationMessageFor(model => model.Time)
                </div>

                <div class="col-12">
                    <button type="button" class="btn" onclick="removeDateTime('dt-1')">
                        <i class="bi bi-trash-fill fs-5" style="color:red"></i>
                    </button>
                </div>
            </div>
        </div>

        <div class="col-12 text-end">
            <a href="@Url.Action("Courses", "Admin")" class="btn">Cancel</a>
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>
